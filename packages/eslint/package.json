{
  "name": "@marzeelabs/eslint",
  "version": "1.0.0",
  "description": "Ready-to-use ESLint configuration for Next.js/TypeScript projects",
  "repository": {
    "type": "git",
    "url": "https://github.com/marzeelabs/tools.git",
    "directory": "packages/eslint"
  },
  "release": {
    "branches": [
      {
        "name": "main"
      }
    ]
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build:runner": "esbuild ./src/index.js --bundle --minify --platform=node",
    "build:esm": "npm run build:runner -- --outfile=dist/index.js --format=esm",
    "build:cjs": "npm run build:runner -- --outfile=dist/index.cjs --format=cjs",
    "build": "npm run build:esm && npm run build:cjs",
    "prepublishOnly": "npm run build"
  },
  "author": "Karim Daghari",
  "license": "ISC",
  "devDependencies": {
    "@types/eslint": "^8.44.6",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "esbuild": "^0.19.5",
    "eslint": "*",
    "eslint-config-next": "*",
    "typescript": "*"
  },
  "peerDependencies": {
    "eslint": "^8.52.0",
    "eslint-config-next": "^13.5.5",
    "typescript": "^5.2.2"
  }
}
